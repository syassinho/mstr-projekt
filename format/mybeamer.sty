% Mode Selection commands w/o linefeed generation
\mode<presentation>{
   \newcommand{\slideonly}[1]{#1}         % replaces HAWK def
   \newcommand{\scriptonly}[1]{}          % replaces HAWK def
}
\mode<article>{
   \newcommand{\slideonly}[1]{}           % replaces HAWK def
   \newcommand{\scriptonly}[1]{#1}        % replaces HAWK def
}
   % note that a \mode<option>{...} command automatically produces a linefeed,
   % by the above definition, \slideonly and \scriptonly do not and can
   % be applied within lines.
\newcommand{\switch}[2]{\slideonly{#1}\scriptonly{#2}}


